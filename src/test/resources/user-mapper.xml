<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.vendigo.acemybatis.util.UserMapper">
    <select id="selectList" resultType="com.github.vendigo.acemybatis.util.User">
        SELECT
        FIRST_NAME as firstName,
        LAST_NAME as lastName,
        EMAIL as email,
        PHONE_NUMBER as phoneNumber,
        CITY as city
        FROM USER
    </select>

    <select id="selectMap" resultType="map">
        SELECT
        FIRST_NAME,
        LAST_NAME,
        EMAIL,
        PHONE_NUMBER,
        CITY
        FROM USER
    </select>

    <select id="selectOne" resultType="java.lang.Integer">
        SELECT count(*) FROM USER
    </select>

    <insert id="insertOne" parameterType="com.github.vendigo.acemybatis.util.User">
        INSERT INTO USER (
        FIRST_NAME,
        LAST_NAME,
        EMAIL,
        PHONE_NUMBER,
        CITY
        )
        VALUES (
        #{firstName},
        #{lastName},
        #{email},
        #{phoneNumber},
        #{city}
        )
    </insert>

    <delete id="deleteAll">
        DELETE FROM USER
    </delete>

    <delete id="deleteByEmail" parameterType="string">
        DELETE FROM USER WHERE EMAIL = #{email}
    </delete>
</mapper>